{% extends 'base.html.twig' %}

{% block title %}Acceder{% endblock %}

{% block body %}

    {{ include('components/navbar.html.twig') }}

    <div class="row" >

        <div class="col-sm-5"></div>

        <div class="col-sm-2">
            <img src="/images/fondos/NTTLogin.png" alt="Logo NTT login" style="text-align:center; height: 200px;"><br><br>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form method="post" >
                <label for="email" style="text-align:left;">Email:</label>
                <input style="text-align:center;" type="email" class="form-control" id="email" name="email" value="{{ last_username }}"/><br><br>

                <label for="password" style="text-align:left;">Password:</label>
                <input style="text-align:center;" type="password" class="form-control" id="password" name="password"/><br><br>

                {# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}
                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}

                <div style="text-align:center;">
                    <button type="submit" class="btn btn-primary">Acceder</button>
                </div>
            </form>
        </div>

        <div class="col-sm-5" ></div>

    </div>

{% endblock %}
